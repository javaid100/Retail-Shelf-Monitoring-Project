{
  "family": "retail-shelf-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "2048",
  "memory": "4096",
  "executionRoleArn": "arn:aws:iam::041568220685:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "retail-shelf-container",
      "image": "041568220685.dkr.ecr.ca-central-1.amazonaws.com/retail-shelf-monitoring-app:latest",
      "memory": 4096,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 5000,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/retail-shelf-task",
          "awslogs-region": "ca-central-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}